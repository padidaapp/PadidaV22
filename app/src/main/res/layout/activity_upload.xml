<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_field"
    tools:context=".UploadActivity">

    <TextView
        android:id="@+id/plsupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gothammedium"
        android:text="PLEASE UPLOAD HERE"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <Button
        android:id="@+id/chooseimage"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:fontFamily="@font/gothamlight"
        android:text="Choose image"
        android:background="@drawable/btnfield"
        android:textAlignment="center"
        android:textColor="@color/purple"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plsupload"
        app:layout_constraintVertical_bias="0.056" />


    <ImageView
        android:id="@+id/ourimage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/imageview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chooseimage"
        app:layout_constraintVertical_bias="0.082" />

    <ProgressBar
        android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="235dp"
        android:layout_height="12dp"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/yellow"
        app:layout_constraintBottom_toTopOf="@+id/FinUploadButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.434"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ourimage"
        app:layout_constraintVertical_bias="0.959" />

    <Button
        android:id="@+id/FinUploadButton"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@drawable/btnfield"
        android:fontFamily="@font/extrathin"
        android:text="UPLOAD"
        android:textColor="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ourimage"
        app:layout_constraintVertical_bias="0.847" />

    <TextView
        android:id="@+id/shwuplds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Uploads"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toEndOf="@+id/FinUploadButton"
        app:layout_constraintTop_toBottomOf="@+id/ourimage"
        app:layout_constraintVertical_bias="0.806" />

    <EditText
        android:id="@+id/bookname"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/btnfield"
        android:ems="10"
        android:hint="Name of the Book"
        android:inputType="textPersonName"
        android:paddingLeft="10sp"
        android:textColor="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ourimage"
        app:layout_constraintVertical_bias="0.094" />

    <EditText
        android:id="@+id/author"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/btnfield"
        android:ems="10"
        android:hint="Author"
        android:inputType="textPersonName"
        android:paddingLeft="10sp"
        android:textColor="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookname"
        app:layout_constraintVertical_bias="0.109" />
</androidx.constraintlayout.widget.ConstraintLayout>